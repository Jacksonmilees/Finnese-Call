# Finnese-call Backend Environment Variables

# Database
DB_USER=youruser
DB_PASSWORD=yourpass
DB_HOST=localhost
DB_NAME=finnese_call
DB_PORT=5432

# JWT Auth
JWT_SECRET=your_jwt_secret

# Africa's Talking
AT_API_KEY=your_africas_talking_api_key
AT_USERNAME=your_africas_talking_username
CALLER_ID=+254XXXXXXXXX

# CRM Integrations
CRM_SALESFORCE_TOKEN=your_salesforce_token
CRM_HUBSPOT_TOKEN=your_hubspot_token
CRM_ZOHO_TOKEN=your_zoho_token
CRM_PIPEDRIVE_TOKEN=your_pipedrive_token

# PBX Integration
PBX_TYPE=asterisk # or freeswitch
PBX_HOST=127.0.0.1
PBX_PORT=5038
PBX_USER=admin
PBX_PASSWORD=your_pbx_password

# Ringtones & Hold Music
RINGTONE_DEFAULT_URL=https://yourdomain.com/audio/default_ringtone.mp3
HOLD_MUSIC_DEFAULT_URL=https://yourdomain.com/audio/default_hold.mp3

# Notifications
NOTIFICATION_EMAIL_FROM=callcenter@yourdomain.com
NOTIFICATION_PUSH_ENABLED=true

# Language/Localization
DEFAULT_LANGUAGE=en

# Wallboard
WALLBOARD_REFRESH_INTERVAL=5 # seconds

# Misc
NODE_ENV=development